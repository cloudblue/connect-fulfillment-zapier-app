{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-multiple-empty-lines": "off",
        "eol-last": "warn"
    },
    "ignorePatterns": [
        "tests/",
        "node_modules/",
        "lib/samples/",
        "describe.js"
    ]
}